{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}

{# Bloc titre #}

<div class="container-fluid">
    <div class="row">
        <div class="blocTitleAdmin text-center col-xl-12">
            <h1>Cabinet Sages-Femmes-Osny</h1>
            <h4><i class="fas fa-briefcase-medical"></i> Sages-Femmes diplomées d'état</h4>  
        </div>
    </div>
</div>

{# Navbar #}
{{ include('admin/navbarAdmin.html.twig') }}

<div class="container">
    <div class="jumbotron my-4">
        <h2 class="text-center mb-4">Modifier le post</h2>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.title, 'Titre du post') }}
            {{ form_widget(form.title, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_errors(form.title) }}
        </div>
        <div class="form-group">
            {{ form_label(form.message, 'Votre texte') }}
            {{ form_widget(form.message, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_errors(form.message) }}
        </div>
        <div class="form-group">
            {{ form_label(form.practicien, 'Publier par') }}
            {{ form_widget(form.practicien, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_errors(form.practicien) }}
        </div>
        <div class="form-group">
            {{ form_label(form.photoFile, 'Photo') }}
            {{ form_widget(form.photoFile, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_errors(form.photoFile) }}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-warning btn-lg form-control mt-4">Modifier</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}